{
  "name": "node-starter",
  "version": "1.0.0",
  "private": false,
  "repository": "github:christophersutton/singlestone-node",
  "scripts": {
    "start": "node server.js",
    "watch:dev": "nodemon",
    "tests": "jest --watchAll --verbose --runInBand"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "collectCoverageFrom": [
      "**/*.js"
    ]
  },
  "nodemonConfig": {
    "exec": "npm run start",
    "watch": [
      "api/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "dependencies": {
    "dotenv": "^8.2.0",
    "express": "~4.16.1",
    "faker": "^4.1.0",
    "helmet": "^3.23.1",
    "http-errors": "~1.6.3",
    "nedb": "^1.8.0"
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "jest": "^25.2.4",
    "nodemon": "^2.0.4",
    "supertest": "^4.0.2"
  }
}
